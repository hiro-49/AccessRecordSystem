<% provide(:title, 'Members') %>
<h1>Member Addition</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@member, url: add_path) do |f| %>
        <%= render 'shared/error_messages' %>
        
        <%= f.label :name %>
        <%= f.text_field :name, class:'form-control' %>
        
        <%= f.label :number %>
        <%= f.text_field :number, class:'form-control' %>
        
        <%= f.label :idm %>
        <%= f.text_field :idm, class:'form-control' %>
        
        <%= f.submit "Add a member", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>