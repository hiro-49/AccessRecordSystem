<% provide(:title, "Members") %>
<h1>Members</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="members">
            <h3>メンバー一覧</h3>
            <table border="1">
                <tr>
                    <th>学籍番号</th>
                    <th>名前</th>
                    <th>IDm</th>
                </tr>
                <% @members.each do |member| %>
                    <tr>
                        <td><%= member.number %></td>
                        <td><%= member.name %></td>
                        <td><%= member.idm %></td>
                    </tr>
                <% end %>
            </table>
            <%= link_to("Add a member", add_path, class: "btn btn-primary link-add") %>
        </div>
    </div>
</div>